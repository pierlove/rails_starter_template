<% provide(:title, 'Edit User') %>
<% provide(:form_url, user_path(@user)) %>
<% provide(:password_text, I18n.t('placeholders.update_password')) %>
<% provide(:password_confirmation_text, I18n.t('placeholders.update_password_confirmation')) %>
<% provide(:submit_text, I18n.t('labels.edit_profile_submit')) %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <div class="gravatar-edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank" rel="noopener">Change your Gravatar</a>
    </div>
  </div>
</div>
